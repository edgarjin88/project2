<%= render 'shared/errors', obj: @article %>

<div class="row">
<div class="col-xs-12">

<%= form_for(@article, :html=> {:multipart => true, class: "form-horizontal", role: "form"}) do |f| %>
 <div class="form-group"> 
  <div class="control-label col-sm-2">
  <%= f.label :title %> 
  </div>
 
 <div class="col-sm-8">
<%= f.text_field :title, class: "form-control", placeholder: "Title of article", 
autofocus: true %>
 
 </div>
</div>
 
<div class="form-group"> 
  <div class="control-label col-sm-2">

    <%= f.label "Profile Image: " %>  </div>

    <div class="col-sm-8">
    <%= f.cl_image_upload :image, class: "form-control" %> 
    </div>

    </div>

<div class="form-group"> 
  <div class="control-label col-sm-2">

    <%= f.label "Music URL: " %>  </div>

    <div class="col-sm-8">
    <%= f.text_field :music, class: "form-control", placeholder: 
    '<iframe type="text/html" src="YOURMUSICURL?autoplay=1" frameborder="0" allow="autoplay"></iframe>' %> 
    </div>

    </div>


 <div class="form-group"> 
  <div class="control-label col-sm-2">

    <%= f.label :description %>  </div>

    <div class="col-sm-8">
    <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "body of articles"  %> 
    </div>

    </div>
 
<div class="form-group">
  <div class="col-sm-10">
    <%= f.submit 'Update this Channel', class: 'col-sm-offset-6 btn btn-primary'%>
  </div>
</div>

<div class="form-group">
<div class="row"> 
  <div class="col-sm-offset-2 col-sm 8">
    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb|%>
    <%= cb.label(class: "checkbox-inline input_checkbox") { cb.check_box(class: "checkbox") + cb.text} %>
    <%#display checkbox%>
    <% end%>
  </div>
</div>


<% end %>
  <div class="col-xs-4 col-xs-offset-4">
  [<%= link_to "Cancel request and return to articles listing", articles_path  %>]
  </div>


</div>

</div>
