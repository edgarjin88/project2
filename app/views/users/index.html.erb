<h1>All Slozzie users</h1>

<div align ="center">
 <%= will_paginate %>
<%# 그래도 왜 argument가 없지 여기서는? %>
<% @users.each do |user| %>

  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
          <%= link_to user.username, user_path(user) %>
        </li>
        <li><small><%= pluralize(user.articles.count, "post") if user.articles %></small></li>
        <% if logged_in? and current_user.admin? %>
          <li><%= link_to "Delete this user", user_path(user), method: :delete,
           
          data: {confirm: "Are you sure you want to delete this account and all the articles?"} %></li>
        <%# 여기서 method: :delete는 router의 verb이다. 아마도. %>
        <% end %>
      </div>
    </div>
  </ul>

<% end %>
 <%= will_paginate %>


</div>
